@model WebApplication4.Models.Rezervacija

@{
    ViewData["Title"] = "Create Reservation";
}

<h1>Create Reservation</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- SobaId -->
            <input type="hidden" asp-for="SobaId" />

            <!-- Arrival Date -->
            <div class="form-group">
                <label asp-for="VrijemeDolaska" class="control-label">Check-in Date</label>
                <input asp-for="VrijemeDolaska" type="date" class="form-control" />
                <span asp-validation-for="VrijemeDolaska" class="text-danger"></span>
            </div>

            <!-- Departure Date -->
            <div class="form-group">
                <label asp-for="VrijemeOdlaska" class="control-label">Check-out Date</label>
                <input asp-for="VrijemeOdlaska" type="date" class="form-control" />
                <span asp-validation-for="VrijemeOdlaska" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>