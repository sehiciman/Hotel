@page
@model LoginModel

@{
    ViewData["Title"] = "Log in";
}
<html lang="en">
<style>
    body {
        background-image: url('https://i.ibb.co/XJfkGJW/pozadina-2.jpg'); /*nasa slika je postavljena jer ne moze ucitati iz wwwroots*/
        background-size: cover;
        background-position: center;
        height: 100vh;
        margin: 0;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
    }

    .register-text {
        margin-top: 20px;
    }

    .content {
        margin-top: 50px;
    }

        .content img {
            margin-top: 50px;
        }

    .col-md-4 {
        margin-top: 50px;
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        justify-content: center;
    }


        .col-md-4 form, .form-group {
            margin-bottom: 10px;
            padding: 10px;
            width: 100%;
            align-items: center;
            justify-content: center;
        }


    .form-control {
        padding: 10px;
        border: solid 1px rgba(0, 0, 0, 1);
        border-radius: 20px;
        text-align: center;
        align-items: center;
        justify-content: center;
        font-size: 20px;
        font-family: Arial, sans-serif;
        color: rgba(255, 255, 255, 1);
        background-color: rgba(56, 34, 29, 1);
    }

    button {
        margin-left: 10px;
        height: 40px;
        width: 92px;
        border-radius: 20px;
        background-color: #28a745;
        color: white;
        border: none;
    }
</style>

<div class="content">

    <img src="https://i.ibb.co/2kRDFbF/naziv.png" alt="naziv" style="width: 714px; height: 118px;">
</div>


<div class="col-md-4">

    <form id="account" method="post" style="display: flex; flex-direction: column; align-items: center;">


        <div asp-validation-summary="All" class="text-danger" style="display: flex; flex-direction: column; align-items: center;"></div>
        <div class="form-group" style="display: flex; flex-direction: column; align-items: center;">

            <input asp-for="Input.KorisnickoIme" class="form-control" placeholder="Korisničko ime" style="
                        background-color: rgba(56, 34, 29, 0.9);
                        display: flex; flex-direction: column; align-items: center;
                        color: rgba(255, 255, 255, 1);
                        font-size: 20px;
                        font-family: Arial, sans-serif, Arial;
                        border-width: 0px;
                        border-style: solid;
                        border-color: rgba(0, 0, 0, 1);
                        border-radius: 20px;
                        text-align: center;
                        font-weight: 400;
                        font-style: normal;
                        padding: 10px;
                        width: 448px;
                        height: 79px;
                        margin-bottom: 10px;
                    " />
            <span asp-validation-for="Input.KorisnickoIme" class="text-danger"></span>
        </div>
        <div class="form-group" style="display: flex; flex-direction: column; align-items: center;">

            <input asp-for="Input.Password" class="form-control" placeholder="Sifra" style="
                            background-color: rgba(255, 255, 255, 0.75);
                            display: flex; flex-direction: column; align-items: center;
                            color: rgba(89, 46, 36, 1);
                            font-size: 20px;
                            font-family: Arial, sans-serif, Arial;
                            border-width: 0px;
                            border-style: solid;
                            border-color: rgba(0, 0, 0, 1);
                            border-radius: 20px;
                            text-align: center;
                            font-weight: 400;
                            font-style: normal;
                            padding: 10px;
                            width: 448px;
                            height: 79px;
                            margin-bottom: 10px; /* Dodaj malo razmaka sa desne strane polja */
                        " />
            <span asp-validation-for="Input.Password" class="text-danger" style="display: flex; flex-direction: column; align-items: center;"></span>
        </div>
        <div class="form-group" style="display: flex; flex-direction: column; align-items: center;   color: rgba(255, 255, 255, 1);">
            <div class="checkbox">
                <label asp-for="Input.RememberMe">
                    <input asp-for="Input.RememberMe" />
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>
        </div>
        <div class="form-group" style="display: flex; flex-direction: column; align-items: center;">
            <button type="submit" style="
                            text-align: center;
                            background: rgba(56, 34, 29, 1);
                            border-width: 0px;
                            border-style: solid;
                            border-color: rgba(2, 90, 191, 1);
                            border-radius: 20px;
                            width: 92px;
                            height: 79px;
                            font-size: 20px;
                            color: white;
                        " class="btn btn-primary">
                &#10003;
            </button>
        </div>

    </form>

    <style>
        ::placeholder {
            font-size: 20px;
        }

        input[placeholder="Korisničko ime"]::placeholder {
            color: rgba(255, 255, 255, 1);
        }

        input[placeholder="Šifra"]::placeholder {
            color: rgba(89, 46, 36, 1); /* Password placeholder color */
        }
    </style>

</div>

<div class="register-text">
    <span style="line-height: 29px;
                letter-spacing: 0px;
                color: rgba(255, 255, 255, 1);
                font-family: 'custom-font-87a87ede-2e41-4d33-8b59-968123e03b36', Arial;
                font-weight: 700;
                font-style: normal;
                font-size: 24px;
                text-align: center;">
        Nisi korisnik? <a style="line-height: 29px;
                letter-spacing: 0px;
                color: #AD7A4E;
                font-family: custom-font-87a87ede-2e41-4d33-8b59-968123e03b36, Arial;
                font-weight: 700;
                font-style: normal;
                font-size: 24px;
                text-align: center;
                touch-action: none;
                user-select: none;
                -webkit-user-drag: none;
                -webkit-tap-highlight-color: rgba(0, 0, 0, 0);
            "
                          asp-area="Identity" asp-page="/Account/Register">Register</a>
    </span>
</div>
<div><a asp-controller="Korisnik" asp-action="IndexSvi" class="button">Go to IndexSvi</a></div>


</html>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}