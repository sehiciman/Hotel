@model IEnumerable<WebApplication4.Models.Ponuda>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nazivPonude)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.soba)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.novaCijena)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nazivPonude)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.soba.ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.novaCijena)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
