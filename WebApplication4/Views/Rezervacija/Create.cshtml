@model WebApplication4.Models.Rezervacija

@{
    ViewData["Title"] = "Create Reservation";
}



<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        body {
            background-image: url('https://i.ibb.co/XJfkGJW/pozadina-2.jpg');
            background-size: cover;
            background-position: center;
            height: 100vh;
            margin: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: center;
            color: white;
            position: relative;
        }

        .home-button {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: rgba(56, 34, 29, 1);
            color: white;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
        }

        .home-button:hover {
            background-color: rgba(255, 255, 255, 0.5);
        }

        .form-container {
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
            width: 100%;
            max-width: 500px;
            box-sizing: border-box;
            background-color: rgba(255, 255, 255, 0);
            text-align: center;
        }

        .form-group {
            margin-bottom: 15px;
        }

        .form-control {
            padding: 10px;
            border: solid 1px rgba(0, 0, 0, 1);
            border-radius: 20px;
            text-align: center;
            font-size: 16px;
            font-family: Arial, sans-serif;
            color: white;
            background-color: rgba(56, 34, 29, 1);
        }

        .form-control::placeholder {
            color: rgba(255, 255, 255, 0.7);
        }

        .btn {
            background-color: rgba(56, 34, 29, 1);
            color: white;
            border: none;
            border-radius: 10px;
            padding: 10px 20px;
            font-size: 16px;
            cursor: pointer;
            text-decoration: none;
            display: inline-block;
            margin: 5px;
        }

        .btn:hover {
            background-color: rgba(255, 255, 255, 0.5);
        }

        .text-danger {
            color: red;
        }

        a {
            color: white;
        }

        a:hover {
            text-decoration: underline;
        }
    </style>
</head>
<body>
<a href="@Url.Action("Index", "Home")" class="home-button">Home</a>
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="All" class="text-danger"></div>

            <!-- SobaId -->
            <input type="hidden" asp-for="SobaId"/>

            <!-- Arrival Date -->
            <div class="form-group">
                <label asp-for="VrijemeDolaska" class="control-label">Check-in Date</label>
                <input asp-for="VrijemeDolaska" type="date" class="form-control"/>
                <span asp-validation-for="VrijemeDolaska" class="text-danger"></span>
            </div>

            <!-- Departure Date -->
            <div class="form-group">
                <label asp-for="VrijemeOdlaska" class="control-label">Check-out Date</label>
                <input asp-for="VrijemeOdlaska" type="date" class="form-control"/>
                <span asp-validation-for="VrijemeOdlaska" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
                <a asp-action="Index" class="btn">Back to List</a>
            </div>
        </form>
    </div>
</div>
</body>
</html>